{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "data/**/*.ts",
    "styles/**/*.ts",
    "styles/**/*.tsx",
    "styles/**/*.css",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "_backup",
    "_diag",
    "docs",
    "**/*.bak",
    "**/*.bak.*",
    ".next",
    ".turbo",
    "components/TopBar.tsx"
  ]
}